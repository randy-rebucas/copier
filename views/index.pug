extends layout/guest

block content
  div.w-100.m-auto.p-5(style="max-width: 400px")
    div.card
      img(src="/images/logo.png" class="card-img-top" alt="...")
      div.card-body.d-flex.flex-column.text-center
        h5.card-title= title
        h6.card-subtitle.mb-2.text-body-secondary Connected to: #{subdomain}
        p.card-text All instances are connected to #{subdomain} including the scrapper library.
        if !isAuthorized
          a(class='btn btn-primary' href= authorizationUrl) Authorize